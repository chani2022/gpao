{% extends 'base-home.html.twig' %}
{% block title %}Fraude
{% endblock %}

{% block pageTitle %}Fraude
{% endblock %}
{% block body %}

	<div class="container">
		<div class="row">
			<div class="col-md-12 col-lg-12">
				<div class="card">
					<div class="col-lg-6 col-md-6">
						<div class="card-body">
							{% form_theme form 'form-theme.html.twig' %}
							{{ form_start(form) }}
							{{ form_errors(form) }}
							<div class="form-group">
								{{ form_errors(form.date) }}
								{{ form_row(form.date, {'attr': {'class': 'form-control'}}) }}
							</div>


							<button id="btn_click" type="submit" class="btn btn-primary">
								<span class="fa fa-save"></span>
								Valider
							</button>
							{{ form_end(form) }}
						</div>
					</div>
				</div>

			</div>
		</div>
		<br/>
		<div class="col-lg-12 col-md-12">
			<div class="card">
				<div class="card-body">
					<div class="table-responsive">

						{% if data!=null %}

							<table class="table">
								<thead style="background:#4272d7;color:#fff;">
									<tr>
										<th>Matricule</th>
										<th>Heure entrée</th>
										<th>Heure début prod</th>
										<th>Différence</th>
									</tr>
								</thead>
								<tbody>
									{% for key,list in data %}
										<tr>
											<td>{{key}}</td>
											<td>{{list.heure_entre}}</td>
											<td>{{list.heure_debut_prod}}</td>
											<td>{{list.difference}}</td>

										</tr>
									{% endfor %}

								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		{% endif %}
	{% endblock %}


