{% extends 'base-home.html.twig' %}
{% block title %}Gestion heures supplémentaire{% endblock %}

{% block pageTitle %} Gestion heures supplémentaire {% endblock %}

{% block body %}
<div class="col-lg-12 col-md-12">
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <div class="card">
                <div class="card-body">
                    {% form_theme form 'form-theme.html.twig' %}
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                            <div class="form-group">
                            {{ form_row(form.date_sup, {'label': 'Date supplémentaire','attr': {'class': 'form-control','readonly ':'readonly'}}) }} 
                            </div>
                            <div class="form-group">
                                {{ form_row(form.hD, {'label': 'Heure début','attr': {'class': 'form-control','readonly ':'readonly'}}) }} 
                            </div>
                            <div class="form-group">
                                {{ form_row(form.hF, {'label': 'Heure fin','attr': {'class': 'form-control','readonly ':'readonly'}}) }} 
                        </div>
                        <div class="form-group" id="del_form">
                            {{ form_row(form.personnel, {'label': '','attr': {'class': 'form-control','readonly ':'readonly'}}) }} 
                        </div>
                            <div class="form-group">
                                <label>Personnel</label>
                                <select id="form_personnel" name="form[personnel]" class="form-control">
                                    <option value="" selected disabled hidden>Selectionnez</option>
                                   
                                    {% for key1,value1 in users %}
                                        {% if key1!=0 %}
                                            <option value="{{value1.id_personnel}}">{{value1.id_personnel}} - {{value1.nom}} {{value1.prenom}} </option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </div>  
                        {% if form.etat is defined %}
                            <div class="form-group">
                                {{ form_row(form.etat, {'label': 'Etat','attr': {'class': 'form-control','readonly ':'readonly'}}) }} 
                            </div>
                        {% endif %}    
                        <button type="submit" class="btn btn-primary">
                            <span class="fa fa-save"></span> Enregistrer
                        </button>
                        {{ form_end(form) }}
                </div>
            </div>
            
        </div>
        
        
        <div class="col-lg-6 col-md-6">
            <div class="card">
                    {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                        {% endfor %}
                    {% for message in app.flashes('danger') %}
                        <div class="alert alert-warning">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <div class="card-body">
                        
                        <form method="post" action="{{ path('app_gestion_demande', { 'slug' : 'search' }) }}" class="form">
                            <div class="form-group">
                                <input type="text" name="matricule" placeholder="Matricule...." class="form-control" >
                            </div>
                            <div class="form-group">
                                {% set varname = app.session.get('plage_date') %}
                                {% set tabDate = [] %}
                                {% for i in varname %}
                                        {% set tabDate = tabDate|merge({ i : varname}) %}
                                {% endfor %}
                                {% if varname!=null %}
                                    {% for key,value in tabDate %}
                                        <input readonly="readonly" type="text" name="date" id="dates" placeholder="Date" class="form-control" value="{{ value[0]}} - {{ value[1]}}">
                                    {% endfor %}
                                {% else %}
                                    <input readonly="readonly" type="text" name="date" id="dates" placeholder="Date" class="form-control" value="">
                                {% endif %}
                                
                            </div>
                            <button type="submit" class="btn btn-primary ml-2">
                                Rechercher
                            </button>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</div>

    <div class="col-lg-12 col-md-12">
        <br/>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                            <thead class="thead-light">
                                <tr>
                                    <th>Date supplémentaire</th>
                                    <th>Heure début</th>
                                    <th>Heure fin</th>
                                    <th>Etat</th>
                                    <th>Matricule</th>
                                </tr>
                            </thead>
                        <tbody>
                            {% for tabl in demandes %}
                                <div class="form-group">
                                    <tr>
                                        <td>{{tabl.date_suplementaire|date("d/m/Y") }}</td>
                                        <td>{{tabl.heure_debut_supplementaire}}</td>
                                        <td>{{tabl.heure_fin_supplementaire}}</td>
                                        <td >
                                        {% if tabl.etat_validation=="Accorder" %}
                                                <span style="color:green;font-size: 15px;"><strong>{{tabl.etat_validation}}</strong></span>
                                                {% elseif tabl.etat_validation=="Rejeter" %}
                                            <span style="color:red;font-size: 15px;"><strong>{{tabl.etat_validation}}</strong></span>
                                            {% else %}
                                            <span style="color:deeppink;font-size: 15px;"><strong>{{tabl.etat_validation}}</strong></span>
                                        {% endif %}
                                        </td>
                                        <td>{{tabl.id_personnel}}</td>
                                        <td>
                                            <a href="{{ path('app_gestion_demande', {'id': tabl.id_demande_supplementaire,'slug':'update'}) }}" >
                                                <i class="fas fa-edit alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                </div>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



{% endblock %}

