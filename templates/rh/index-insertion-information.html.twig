{% extends 'base-home.html.twig' %}

{% block title %}Communiqué{% endblock %}
{% block stylesheets %}
    <style>
        #listeMessage .unread td{
            font-weight: bold;
            color: #098ddf;
        }
    </style>
{% endblock %}
{% block pageTitle %}
    <i class="fas fa-stats"></i>Insertion Communiqué
{% endblock %}

{% block body %}


    <div class="col-lg-12 col-md-12">
   
        <div class="card card-default">
            <div class="card-body">

                <h3><i class="fas fa-comment"></i>Insertion</h3>
                <hr>
                {% form_theme form 'form-theme.html.twig' %}
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.text) }}
                </div>
                <button type="submit" class="btn btn-primary" id="">
                    Enregistrer
                </button>
                {{ form_end(form) }}
                {#
                <form method="post" action="{{ url('add_communique') }}">

                    <div class="form-group">
                        <label class="" for="text">Texte</label>
                        <textarea class="form-control" id="text" name="text" rows="10"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary" id="">
                        Enregistrer
                    </button>
                </form>
                #}
            </div>
        </div>

    </div>


    <div class="col-lg-12 col-md-12">
        <div class="row">
            {% for i in liste_info %}
                <div class="col-lg-6 col-md-6">
                 <br/>
                        <div class="card card-default">
                            <div class="card-header">
                                Message de:<br>
                                {{ i.prenom }} {{ i.nom }}<br>
                                Ajouté le: {{ i.date|date("d/m/Y") }} {{ i.heure }}
                            </div>
                            <div class="card-body" style="height: 200px;overflow-y: auto">
                                {{ i.texte|nl2br }}
                            </div>
                            <div class="card-footer">
                                <a href="{{ url('add_communique') }}?delete={{ i.id_information }}" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Supprimer
                                </a>
                            </div>
                        </div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script>

    </script>
{% endblock %}
