{% extends 'base.html.twig' %}

{% block title %}Connection{% endblock %}

{% block body %}
    <br>
<div class="row">
    <div class="col-md-5 col-xs-5 col-lg-5 mr-auto ml-auto">
        <div class="card card-default">
            <div class="card-body">
                <form method="post" class="form">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}


                    <h1 class="mb-3 font-weight-normal text-primary text-center">GPAO adds.</h1>
                    <hr>
                    <div class="form-group">
                        <label for="inputUsername">Login ou Matricule</label>
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword">Mots de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <button class="btn btn-sm btn-primary btn-block" type="submit">
                        Connexion
                    </button>
                    <hr>
                    <p class="text-center text-muted">
                        <i>Nouvelle version</i><br>
                        ELINE &copy; 2020.
                    </p>
                </form>
            </div>
        </div>
        
    </div>
</div>
{% endblock %}
